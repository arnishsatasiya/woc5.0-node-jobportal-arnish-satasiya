<body>
    <div class="main">

        <section class="signup">
            <div class="container">
                <div class="signup-content">
                    <div class="signup-form">
                        <h2 class="form-title">Company Sign up</h2>
                        <form action="/api/company" method="POST" class="register-form" id="register-form">
                            <div class="form-group">
                                <label for="name"><i class="fa-solid fa-user"></i></label>
                                <input type="text" name="name" id="name" placeholder="Company Name" />
                            </div>
                            <div class="form-group">
                                <label for="email"><i class="fa-solid fa-envelope"></i></label>
                                <input type="email" name="email" id="email" placeholder="Company Email" />
                            </div>
                            <div class="form-group">
                                <label for="user_name"><i class="fa-solid fa-user"></i></label>
                                <input type="text" name="user_name" id="user_name" placeholder="Company username" />
                            </div>








                            <div class="form-group">
                                <label for="pass"><i class="fa-solid fa-lock"></i></label>
                                <input type="password" name="pass" id="pass" placeholder="Password" />
                            </div>
                            <div class="form-group">
                                <label for="re-pass"><i class="fa-sharp fa-solid fa-key"></i></label>
                                <input type="password" name="re_pass" id="re_pass" placeholder="Repeat your password" />
                            </div>


                            <div class="form-group">
                                <label for="website"><i class="fa-solid fa-user"></i></label>
                                <input type="text" name="website" id="website" placeholder="Company Website" />
                            </div>

                            <div class="form-group">
                                <label for="job-position"><i class="fa-solid fa-user"></i></label>
                                <input type="text" name="job_position" id="job-position" placeholder="Job position" />
                            </div>

                            <div class="form-group">
                                <label for="package"><i class="fa-solid fa-user"></i></label>
                                <input type="text" name="package" id="package" placeholder="Package" />
                            </div>


                        

                          
                            
                            <div class="form-group">
                                <label for="required-cpi"><i class="fa-solid fa-graduation-cap"></i></label>
                                <input type="text" name="required_cpi" id="required-cpi" placeholder="Required CPI" />
                            </div>
                            <div class="form-group">
                                <label for="required-skill"><i class="fa fa-cogs" aria-hidden="true"></i></label>
                                <input type="text" name="required_skill" id="required-skill" placeholder="Required Skills" />
                            </div>
                            <div class="form-group form-button">
                                <input type="submit" name="signup" id="signup" class="form-submit" value="Register" />
                            </div>

                            



                         


                            
                        </form>
                    </div>
                    <div class="signup-image">
                        <figure><img src="img/signup1.jpg" alt="sing up image"></figure>
                        <a href="/company-login" class="signup-image-link">Already registered company</a>
                    </div>
                </div>
            </div>
        </section>


    </div>

